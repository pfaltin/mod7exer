@model IEnumerable<CRUDExer03.Models.Customer>

@{
    ViewData["Title"] = "Popis kupaca";
    ViewData["Btn_Create"] = "Unesi kupca";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">@ViewData["Btn_Create"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.ActionLink("AÅ¾uriranje", "Edit", new { id = item.CustomerId }) |
                    @Html.ActionLink("Detalji", "Details", new { id = item.CustomerId }) |
                    @Html.ActionLink("Brisanje", "Delete", new { id = item.CustomerId })
                </td>
            </tr>
        }
    </tbody>
</table>
